<jonchkicfg>
	<repositories>
		<!-- This local repository contains the build artefacts from this project. -->
		<repository id="local" type="file" cacheable="false">
			<root>../../repository</root>
			<versions>[group]/[module]</versions>
			<config>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</config>
			<artifact>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</artifact>
		</repository>

		<!-- This local repository contains the build artefacts from this project. -->
		<repository id="overrides" type="file" cacheable="false">
			<root>../../../../jonchki/local_repository</root>
			<versions>[group]/[module]</versions>
			<config>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</config>
			<artifact>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</artifact>
		</repository>

		<!-- The bintray repository contains stable artifacts. -->
<!--		<repository id="bintray" type="url" cacheable="true" rescan="3600">
			<root>https://dl.bintray.com/muhkuh/jonchki</root>
			<versions>[group]/[module]</versions>
			<config>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</config>
			<artifact>[group]/[module]/[version]/[artifact]-[version][platform].[extension]</artifact>
		</repository> -->

		<!-- The github repository contains stable artifacts. -->
		<repository id="github" type="url" cacheable="true" rescan="3600">
			<root>https://github.com/muhkuh-sys</root>
			<versions>[dotgroup]-[module]/releases</versions>
			<config>[dotgroup]-[module]/releases/download/v[version]/[artifact]-[version][platform].[extension]</config>
			<artifact>[dotgroup]-[module]/releases/download/v[version]/[artifact]-[version][platform].[extension]</artifact>
		</repository>

		<!-- Hack to make jonchki include a package with a suffix after the version number:
		https://github.com/muhkuh-sys/org.muhkuh.lua-romloader/releases/download/v2.5.4-dev2/lua5.1-romloader-2.5.4-windows_x86_64.tar.xz
		Replacing [module] with romloader (the module name) prevents other packages from being found using this rule.
		-->
		<repository id="github2" type="url" cacheable="true" rescan="3600">
			<root>https://github.com/muhkuh-sys</root>
			<versions>[dotgroup]-romloader/releases</versions>
			  <config>[dotgroup]-romloader/releases/download/v[version]-dev3/[artifact]-[version][platform].[extension]</config>
			<artifact>[dotgroup]-romloader/releases/download/v[version]-dev3/[artifact]-[version][platform].[extension]</artifact>
		</repository>

